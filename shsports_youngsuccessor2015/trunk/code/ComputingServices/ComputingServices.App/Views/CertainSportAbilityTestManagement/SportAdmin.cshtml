@{
    ViewBag.Title = "专项能力字典维护 - 项目";
}

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">项目编辑</h2>
            </div>
            <div class="panel-body" data-bind="with: sportEditing">
                <form role="form">
                    <div class="form-group">
                        <label for="inpCode">项目编号</label>
                        <input id="inpCode" type="text" class="form-control" data-bind="value: code" />
                    </div>
                    <div class="form-group">
                        <label for="inpName">项目名称</label>
                        <input id="inpName" type="text" class="form-control" data-bind="value: name" />
                    </div>
                </form>
                <input type="button" class="btn btn-primary" value="保存" data-bind="click: save" />
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">项目列表</h2>
            </div>
            <div class="panel-body" data-bind="with: sportList">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>项目编号</th>
                            <th>项目名称</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: sports">
                        <tr>
                            <td data-bind="text: code"></td>
                            <td data-bind="text: name"></td>
                            <td>
                                <button type="button" class="btn btn-primary btn-xs" data-bind="click: $parent.editItem">编辑</button>
                                <button type="button" class="btn btn-danger btn-xs" data-bind="click: $parent.removeItem">删除</button>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <br />
                <input type="button" class="btn btn-default" value="刷新" data-bind="click: load" />

            </div>
        </div>
    </div>

</div>

@section PageScripts
{
    <script type="text/javascript">
        var baseUrl = '@Url.Content("~/")';
    </script>
    <script src="~/KnockoutModels/CertainSportAbilityTestEvaluationCriteriaSportAdminViewModel.js"></script>
}